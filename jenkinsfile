pipeline {
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("nodejs-docker-app")
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh "docker stop nodejs-docker-container|| true"
                    sh "docker rm nodejs-docker-container || true"
                    sh "docker run -d --name nodejs-docker-container -p 3000:3000 nodejs-docker-app"
                }
            }
        }
    }

    post {
        success {
            sh "docker ps"
        }
        failure {
            echo 'Failed'
        }
    }
}
